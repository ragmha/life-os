{
  "name": "life-os",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "bun@latest",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prebuild": "expo prebuild --clean",
    "e2e:local": "maestro test .maestro",
    "e2e:build:ios": "eas build --profile e2e --platform ios",
    "e2e:build:android": "eas build --profile e2e --platform android",
    "e2e:test": "eas build:run -p all --e2e",
    "build:dev:ios": "eas build --profile development-simulator --platform ios --local",
    "build:dev:android": "eas build --profile development-apk --platform android --local",
    "install:ios": "xcrun simctl install booted ./build-*.app",
    "install:android": "adb install ./build-*.apk",
    "e2e:dev:ios": "maestro test .maestro",
    "e2e:dev:android": "maestro test .maestro",
    "e2e:setup": "node scripts/maestro-local-setup.mjs",
    "e2e:devices": "echo 'iOS Simulators:' && xcrun simctl list devices booted && echo '\nAndroid Devices:' && adb devices",
    "e2e:debug": "maestro test .maestro/debug.yaml",
    "e2e:info": "node scripts/maestro-info.mjs",
    "lefthook": "lefthook",
    "lefthook:install": "lefthook install",
    "lefthook:uninstall": "lefthook uninstall"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "expo": "~52.0.37",
    "expo-blur": "~14.0.3",
    "expo-constants": "~17.0.7",
    "expo-font": "~13.0.4",
    "expo-haptics": "~14.0.1",
    "expo-linking": "~7.0.5",
    "expo-router": "~4.0.17",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "expo-symbols": "~0.2.2",
    "expo-system-ui": "~4.0.8",
    "expo-web-browser": "~14.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-native": "^0.73.0",
    "eslint": "^9.22.0",
    "eslint-config-expo": "^8.0.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.4",
    "jest-watch-typeahead": "^2.2.2",
    "lefthook": "^1.11.3",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3"
  },
  "private": true
}
